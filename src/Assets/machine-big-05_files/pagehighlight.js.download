for(var z=1; z<y+1; z+=1){
	
	getLeftLinks = []; 
$('.leftNav > li:nth-child('+z+')').find("a").each(function() {
			var $a = $(this).attr('href');
	      var $b = $a.lastIndexOf("/");
		  var $c = $a.substr($b + 1);	
            getLeftLinks.push($c);
        });		
        for (i = 0; i < getLeftLinks.length; i++) {
            if (pageName == getLeftLinks[i]) {
				$(".leftNav > li:nth-child("+z+") a:eq("+i+")").addClass('leftnavA');
				$(".leftNav li:nth-child("+z+") strong").addClass('leftnavA');
				$(".leftNav > li:nth-child("+z+") ul").show();
				$(".leftNav > li ul").removeClass('show');
				$(".leftNav > li:nth-child("+z+") ul").addClass('show');
            }
        }
	getLeftLinks = null;
	}
	
	
	
